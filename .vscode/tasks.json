{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Auto Stage on Save",
      "type": "shell",
      "command": "git add -A",
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "Open заметки.txt",
      "type": "process",
      "command": "${execPath}",
      "args": [
        "${workspaceFolder}/docs/заметки.txt"
      ],
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      }
    }
  ]
}
